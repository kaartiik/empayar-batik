<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kaartiikvjn.empayarbatik">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EmpayarBatik">
        <meta-data
            android:name="android.app.default_searchable"
            android:value=".UI.SearchResultActivity" />

        <activity
            android:name=".UI.SearchResultActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".UI.collection.Tropicana"
            android:exported="true" />
        <activity
            android:name=".UI.collection.Senada"
            android:exported="true" />
        <activity
            android:name=".UI.collection.CalmSea"
            android:exported="true" />
        <activity
            android:name=".UI.ItemDetails"
            android:exported="true" />
        <activity
            android:name=".UI.OrderCompleted"
            android:exported="true" />
        <activity
            android:name=".UI.PaymentBrandSelector"
            android:exported="true" />
        <activity
            android:name=".UI.PaymentPage"
            android:exported="true" />
        <activity
            android:name=".UI.ShoppingCartActivity"
            android:exported="true" />
        <activity
            android:name=".UI.RegisterScreen"
            android:exported="true" />
        <activity
            android:name=".UI.AddItem"
            android:exported="true" />
        <activity
            android:name=".UI.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".UI.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.EmpayarBatik.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.MainActivity"
            android:exported="true" />
    </application>

</manifest>