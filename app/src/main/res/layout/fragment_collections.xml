<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.CollectionsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/calmSea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                android:src="@drawable/calm_sea" />

            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textStyle="italic"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextSecondary"
                android:textSize="25sp"
                android:text="Calm Sea Collection"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/senada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                android:src="@drawable/senada" />

            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextSecondary"
                android:textSize="25sp"
                android:textStyle="italic"
                android:text="Senada Collection"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tropicana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                android:src="@drawable/tropicana" />

            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextSecondary"
                android:textSize="25sp"
                android:textStyle="italic"
                android:text="Tropicana Collection"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>