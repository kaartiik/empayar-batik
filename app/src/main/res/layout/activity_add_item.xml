<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.AddItem">

    <include
        android:id="@+id/add_item_toolbar"
        layout="@layout/layout_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_item_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <ImageView
                    android:id="@+id/add_item_imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:scaleType="fitCenter" />

                <ImageButton
                    android:id="@+id/add_item_imagePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/image_bg"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_camera_alt_24"
                    app:tint="@color/colorPrimary" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Title"
                android:textColor="@color/colorTextSecondary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addItem_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_bg"
                android:hint="Enter item title"
                android:inputType="text"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Price (RMN)"
                android:textColor="@color/colorTextSecondary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addItem_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_bg"
                android:hint="Enter item price"
                android:inputType="numberDecimal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Size"
                android:textColor="@color/colorTextSecondary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_bg"
                android:padding="5dp"
                android:orientation="horizontal">
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/xs_checkbox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/xs"
                    />
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/s_checkbox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/s"
                    />
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/m_checkbox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/m"
                    />
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/l_checkbox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/l"
                    />
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/xl_checkbox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/xl"
                    />
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/xll_checkbox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/xll"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Special traits"
                android:textColor="@color/colorTextSecondary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addItem_traits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_bg"
                android:gravity="top|start"
                android:hint="Special traits.."
                android:inputType="textMultiLine"
                android:lines="3"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Material"
                android:textColor="@color/colorTextSecondary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addItem_material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_bg"
                android:hint="Material...."
                android:inputType="text"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Category"
                android:textColor="@color/colorTextSecondary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_bg"
                android:paddingHorizontal="5dp"
                android:paddingVertical="10dp">

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/categorySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_arrow_tint="@color/colorPrimary"
                    app:ms_background_color="@color/colorEditTextBg" />

            </RelativeLayout>

            <Button
                android:id="@+id/button_addItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:text="Add Item" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>